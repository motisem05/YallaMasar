@page
@model ChangePasswordModel
@{
	ViewData["Title"] = "Change password";
	ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<form id="change-password-form" method="post">
	<div class="flex flex-col space-y-4 mb-4 w-full md:w-1/2">
		<h3 class="text-2xl">
			@ViewData["Title"]
		</h3>

		<partial name="_StatusMessage" for="StatusMessage" />

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="relative">
			<input asp-for="Input.OldPassword" class="input peer" placeholder=" " aria-required="true" />
			<label asp-for="Input.OldPassword" class="input-label"></label>
			<span asp-validation-for="Input.OldPassword" class="text-red-500 text-sm"></span>
		</div>

		<div class="relative">
			<input asp-for="Input.NewPassword" class="input peer" placeholder=" " aria-required="true" />
			<label asp-for="Input.NewPassword" class="input-label"></label>
			<span asp-validation-for="Input.NewPassword" class="text-red-500 text-sm"></span>
		</div>

		<div class="relative">
			<input asp-for="Input.ConfirmPassword" class="input peer" placeholder=" " aria-required="true" />
			<label asp-for="Input.ConfirmPassword" class="input-label"></label>
			<span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
		</div>
	</div>

	<button type="submit" class="btn-primary">
		Update password
	</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
