@page
@model YallaMasar.Areas.Locations.Pages.IndexModel

@inject IHtmlLocalizer<SharedResource> Localizer

@{
	ViewData["Title"] = "Locations";
	ViewData["Image"] = "/img/locations.jpg";
}

<div class="flex space-x-4 space-y-4 rtl:space-x-reverse">
	@foreach (var location in Model.Locations)
	{
		<a asp-area="Locations" asp-page="/Details" asp-route-id="@location.Id"
	  class="first:rtl:mr-4 first:mt-4 first:ltr:ml-4 relative shadow-md group w-64 h-96 bg-cover bg-center bg-no-repeat md:hover:scale-105 transition-all duration-300 rounded-md"
	  style="background-image: url('/api/Locations/Covers/@location.Id');">

			<div class="absolute rtl:bg-gradient-to-tl ltr:bg-gradient-to-tr from-black/80 via-transparent 
				inset-0 h-full w-full text-white flex items-end pb-4 rtl:pr-4 ltr:pl-4
				">
				<h2 class="text-3xl">
					@location.Name
				</h2>
			</div>
		</a>
	}
</div>